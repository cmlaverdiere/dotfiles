[user]
    email = cmlaverdiere@gmail.com
    name = Chris Laverdiere
    signingkey = 3BD854A6

[alias]
    aa = add -A
    br = branch
    ce = config -e
    cm = commit
    co = checkout
    ds = diff --stat
    dst = diff --staged
    pm = push origin master
    st = status -s
    set-upstream = !git branch --set-upstream-to=origin/$(git symbolic-ref --short HEAD)
    sw = "!f() { git branch --format='%(refname:short)' | fzf --query=\"$1\" --select-1 | xargs git switch; }; f"
    please = push --force-with-lease

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
    hooksPath = /usr/local/dd/global_hooks

[diff]
    compactionHeuristic = true

[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[push]
    default = current

[interactive]
    diffFilter = diff-highlight

[merge]
    tool = vimdiff
    conflictstyle = diff3
    prompt = false

[mergetool]
    keepBackup = false
[hub]
    protocol = https

[url "git@github.com:"]
    insteadOf = https://github.com/

