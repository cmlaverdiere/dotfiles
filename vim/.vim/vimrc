" Remove trailing whitespace function.
fun! RTW()
  let l = line(".")
  let c = col(".")
  %s/\s\+$//e
  call cursor(l, c)
endfun
command! RTW call RTW()

fun! EnableAutoread()
    set autoread
    set shortmess+=Ot
    set cmdheight=2
endfun
command! EnableAutoread call EnableAutoread()

